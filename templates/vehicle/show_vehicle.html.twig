{% extends 'base.html.twig' %}

{% block title %}Vehicule{% endblock %}

{% block body %}

<main class="d-flex flex-column align-items-center">

    <div class="container col-xxl-8 px-4 py-5">
        <div class="row flex-lg-row align-items-center g-5 py-5">
            <div class="col-10 col-sm-8 col-lg-6">
                <img src="{{ vich_uploader_asset(vehicle) }}" class="d-block mx-lg-auto img-fluid" alt="image {{ vehicle.vehicleName }}" width="700" height="500" loading="lazy">
            </div>
            <div class="col-lg-6">
                <h2 class="display-5 fw-bold text-body-emphasis lh-1 mb-3">{{ vehicle.vehicleName }} ✅</h2>
                <h6 class="card-subtitle mb-2 text-muted">Description:</h6>
                <p class="card-text">{{ vehicle.description }}</p>
                <p class="lead">Quickly design and customize responsive mobile-first sites with Bootstrap, the world’s most popular front-end open source toolkit, featuring Sass variables and mixins, responsive grid system, extensive prebuilt components, and powerful JavaScript plugins.</p>
                <h6 class="card-subtitle mb-2 text-muted">Prix: {{ vehicle.price }} </h6>
                <h6 class="card-subtitle mb-2 text-muted">Kilomètres: {{ vehicle.kilometers }} </h6>

                {# Récupération date et convertion en chaîne de caractères #}
                <h6 class="card-subtitle mb-2 text-muted">Mise en circulation: {{ vehicle.registrationDate|date('d-m-Y') }}</h6><br>
                <a href="#" class="btn btn-primary">Je prends contact</a>
                {#  <a href="{{ path('app_contact') }}" class="btn btn-primary">Je prends contact</a>  #}

            </div>
        </div>
    </div>

    <div id="carouselExampleSlidesOnly" class="carousel slide m-3" data-bs-ride="carousel">
        <div class="carousel-inner">
            {% if vehicle.vehicleName %}
                {% for image in image_list %}
                    <div class="carousel-item active ms-3">
                        <img src="{{ vich_uploader_asset(image) }}" class="d-block w-100" alt="image {{ image.imageName }}" loading="lazy">
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>

</main>

{% endblock %}

