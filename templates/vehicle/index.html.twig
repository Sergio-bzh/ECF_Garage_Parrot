{% extends 'base.html.twig' %}

{% block title %}Liste des vehicules{% endblock %}

{% block body %}
    <main>
        {# SUPPRIMER LIGNE ci-dessous #}
        <h2 class="text-center">{{ controller_name }}! ✅</h2>
        <h2 class="text-center">Liste des véhicules</h2>

        <div class="filters text-center">
            <h3>Liste des filtres</h3>
            <div class="d-flex justify-content-center align-items-center">
                <div class=" mx-3">Filtre-1</div>
                <div class=" mx-3">Filtre-2</div>
                <div class=" mx-3">Filtre-3</div>
            </div>
        </div>

        <div class="container d-flex flex-column br-1 justify-content-evenly mt-3 flex-lg-row">

            {% if vehicle_list|length > 0 %}
                {# Affichage des véhicules récupérés de la BDD #}
                {% for vehicle in vehicle_list %}
                    <a href="{{ path('app_show_vehicle', {id:vehicle.id}) }}">
                    <article class="col col-12 mx-1 col-lg-3 mx-3">
                        <h3 class="text-center">{{ vehicle.vehicleName }}</h3>
    {# ATTENTION je mettrai l'image dans une balise <a href="#"></a> #}
                        <img src="{{ vich_uploader_asset(vehicle) }}" alt="vehicle.name">
                        <ul class="list-unstyled">
                            <li><div> Prix: {{ vehicle.price }} </div></li>
                            <li>Kilomètres: {{ vehicle.kilometers }} </li>
                            {# Récupération date et convertion en chaîne de caractères #}
                            <li>Mise en circulation: {{ vehicle.registrationDate|date('d-m-Y') }} </li>
                        </ul>
                     {{ dump(vehicle) }}
                    </article></a>
                {% endfor %}
            {% endif %}

        </div>

    </main>
{% endblock %}
