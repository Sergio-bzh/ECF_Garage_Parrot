{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

<h2 class="text-center">Services proposés par le garage</h2>
<div class="container d-flex flex-column br-1 justify-content-evenly mt-3 flex-lg-row-reverse">

    {% for service in services %}
        <div class="lg-align-self-center m-3">
            <h3>{{ service.Appelation }}</h3>
            <p><label>Type de service : {{ service.Type }}</label></p>
            <p>{{ service.Description }}</p>

        </div>
    {% endfor %}

</div>

<h2 class="text-center">Commentaires et témoignages</h2>
<div class="d-flex flex-column-reverse justify-content-evenly">

        <div class="container d-flex flex-column br-1 justify-content-evenly mt-3 flex-lg-row">
        {% for testimonial in testimonials %}
            <div class="col col-12 mx-1 col-lg-2 mx-3">
                <ul class="list-unstyled">
                    <li><label>Nom: {{ testimonial.Nom }} </label></li>
                    <li><label>Contenu: {{ testimonial.Contenu }} </label></li>
                    <li><label>Note: {{ testimonial.Note }} </label></li>
                </ul>
            </div> <br>
        {% endfor %}
        </div>

        <div class="align-self-center text-end me-3 text-lg-end">
            <a href="{{ path('app_comments') }}"><button class="btn btn-primary">Voir tout</button></a>
        </div>

    </div>
{% endblock %}
